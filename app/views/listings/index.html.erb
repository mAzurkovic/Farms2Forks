<div class="page-header">
  <h1>Listings <small>Find the freshest foods</small></h1>
</div>

<%= form_tag(listings_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
<%= submit_tag "Search" %>
<% end %>

<div class="card-panel" style="width: 40%; display:table; margin: 0 auto;">

  <% @tools.to_a %>
  <% if params[:search] %>
    <div id="query_return">results for "<b><%= params[:search] %></b>"</div>
  <% end %>

<% @tools.each do |listing| %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to listing.tool, listing %></h3>
  </div>
  <div class="panel-body">
    <div class="row">
      <div class="col-md-3"><%= image_tag listing.image.url(:thumb), :class => 'show_img' %></div>
      <div class="col-md-9">
        <div>Selling for $<%= listing.price %></div>
        <div>Farm located in <strong><%= listing.user.location %></strong></div>
        <div>Farmer rating:<%= rating_for listing.user, "user" %></div>
        <div>Posted <%= time_ago_in_words(listing.created_at) %> ago by <%= link_to listing.user.name, listing.user %>
          <span><%= image_tag listing.user.avatar.url(:thumb), :class => "prof-img" %></span></div>
      </div>
    </div>
  </div>
</div>
<% end %>
</div>
</div>
<br>
