<br>

<div class="container">
    <div class="card-panel">

        <h2 class="center" style="color: #7e57c2;"><%= image_tag(@user.avatar.url(:thumb)) %><%= @user.name %></h2>

        <h5>
            <b>Farm Photos</b>
        </h5>
        <div class="row" style="padding: 10px; background-color: #ede7f6; border-radius: 10px;">

            <div class="col s4">
                <%= image_tag(@user.xphoto.url(:medium)) %>
            </div>
            <div class="col s4">
                <%= image_tag(@user.yphoto.url(:medium)) %>
            </div>
            <div class="col s4">
                <%= image_tag(@user.zphoto.url(:medium)) %>
            </div>

        </div>

        <div class="row">
            <div class="col s8">
                <h5>
                    <b>Bio</b>
                </h5>
                <p><%= @user.description %></p>
            </div>
            <div class="col s4">
                <% if @user.is_lender %>
                <div></div>
            <% else %>
                <div></div>
                <% end %>

                <div>Rating:<%= rating_for @user, "user" %></div>

                <div><%= @user.location %></div>
                <div>
                    <a href="#"><%= @user.payment_url %></a>
                </div>
            </div>

            <div class="row">
                <div class="small-2 large-2 columns"></div>
                <br>
                <div class="small-2 large-4 columns"></div>
            </div>

            <% @foods.each do |listing| %>

            <div class="panel panel-default">
              <div class="panel-heading" style="background-color:#c8e6c9;">
                <h3 class="panel-title" style="font-weight: 500px;"><%= link_to listing.tool, listing %></h3>
              </div>
              <div class="panel-body">
                <div class="row">
                  <div class="col-md-3"><%= image_tag listing.image.url(:thumb), :class => 'show_img' %></div>
                  <div class="col-md-6" style="font-size: 15px;">
                    <div>Farm located in <strong><%= listing.user.location %></strong></div>
                    <div>Farmer rating:<%= rating_for listing.user, "user" %></div>
                    <div>Posted <%= time_ago_in_words(listing.created_at) %> ago by <%= link_to listing.user.name, listing.user %>
                      <span><%= image_tag listing.user.avatar.url(:thumb), :class => "prof-img" %></span></div>
                  </div>
                  <div class="col-md-3">
                    <div style="text-align: center;">Selling for </div>
                    <p style="font-size:36px; text-align: center;">$<%= listing.price %></p>
                  </div>
                </div>
              </div>
            </div>
            <% end %>


        </div>

    </div>
</div>
